# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h,cpp,hpp,cxx,hxx,cc,hh,cppm}]
indent_size = 4
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[{CMakeLists.txt,*.cmake}]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
end_of_line = lf

[*.sh]
end_of_line = lf

[{control,conffiles}]
end_of_line = lf
insert_final_newline = false
